            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('customer_id', response.id);",
                  "    console.log('Customer ID saved:', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"张三\",\n  \"phone\": \"13800138000\",\n  \"company\": \"测试公司\",\n  \"categoryId\": \"CAT001\",\n  \"intentionLevel\": \"A\",\n  \"email\": \"zhangsan@example.com\",\n  \"wechat\": \"zhangsan123\",\n  \"regionId\": \"REGION_BJ\",\n  \"budgetRangeId\": \"BUD001\",\n  \"notes\": \"这是一个测试客户\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/customers",
              "host": ["{{base_url}}"],
              "path": ["api", "customers"]
            }
          },
          "response": []

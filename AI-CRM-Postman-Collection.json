            "body": {
              "mode": "raw",
              "raw": "{\n  \"intentionLevel\": \"B\",\n  \"notes\": \"客户意向有所下降\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/customers/{{customer_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "{{customer_id}}"]
